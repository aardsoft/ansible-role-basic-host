[epel]
name=Extra Packages for Enterprise Linux 7 - $basearch
baseurl={{ epel_mirror }}/epel/7/$basearch
failovermethod=priority
enabled={{ epel_repositories.epel | default('1') }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-7

[epel-debuginfo]
name=Extra Packages for Enterprise Linux 7 - $basearch - Debug
baseurl={{ epel_mirror }}/epel/7/$basearch/debug
failovermethod=priority
enabled={{ epel_repositories.epel_debug | default('0') }}
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-7
gpgcheck=1

[epel-source]
name=Extra Packages for Enterprise Linux 7 - $basearch - Source
baseurl={{ epel_mirror }}/epel/7/SRPMS
failovermethod=priority
enabled={{ epel_repositories.epel_source | default('0') }}
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-EPEL-7
gpgcheck=1
