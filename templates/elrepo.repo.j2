### Name: ELRepo.org Community Enterprise Linux Repository for el{{_os_release}}
### URL: http://elrepo.org/

[elrepo]
name=ELRepo.org Community Enterprise Linux Repository - el{{_os_release}}
baseurl={{ elrepo_mirror }}/elrepo/el{{_os_release}}/$basearch/
enabled={{ elrepo_repositories.elrepo | default('0') }}
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-elrepo.org
protect=0

