# {{ ansible_managed }}
[fedora]
name=Fedora $releasever - $basearch
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Everything/$basearch/os/
enabled={{ fedora_repositories.fedora | default('1') }}
metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False

[fedora-debuginfo]
name=Fedora $releasever - $basearch - Debug
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Everything/$basearch/debug/tree/
enabled={{ fedora_repositories.debuginfo | default('0') }}
metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False

[fedora-source]
name=Fedora $releasever - Source
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Everything/source/tree/
enabled={{ fedora_repositories.source | default('0') }}
metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False
