# {{ ansible_managed }}
[fedora-modular]
name=Fedora Modular $releasever - $basearch
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Modular/$basearch/os/
enabled={{ fedora_repositories.modular | default('1') }}
#metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False

[fedora-modular-debuginfo]
name=Fedora Modular $releasever - $basearch - Debug
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Modular/$basearch/debug/tree/
enabled={{ fedora_repositories.modular_debuginfo | default('0') }}
metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False

[fedora-modular-source]
name=Fedora Modular $releasever - Source
failovermethod=priority
baseurl={{ fedora_mirror }}/fedora/linux/releases/$releasever/Modular/source/tree/
enabled={{ fedora_repositories.modular_source | default('0') }}
metadata_expire=7d
repo_gpgcheck=0
type=rpm
gpgcheck=1
gpgkey=file:///etc/pki/rpm-gpg/RPM-GPG-KEY-fedora-$releasever-$basearch
skip_if_unavailable=False
